<Window x:Class="GameOfLife.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <StackPanel Background="Lavender">
        <TextBlock HorizontalAlignment="Stretch" FontWeight="Bold" FontSize="25" TextAlignment="Center">Game of Life</TextBlock>
        <Label HorizontalAlignment="Center" Content="Board size:" Margin="0,50,0,0"/>
        <TextBox HorizontalAlignment="Center" Name="BoardSize" Width="130" Height="27"/>
        <Label HorizontalAlignment="Center" Content="Initial shape" Margin="0, 50, 0, 0"/>
        <ComboBox x:Name="InitialShape" HorizontalAlignment="Center" Height="25" Margin="0, 0, 0, 50" Width="130">
            <ComboBoxItem x:Name="Random" IsSelected="True">Random</ComboBoxItem>
            <ComboBoxItem x:Name="Empty">Empty</ComboBoxItem>
        </ComboBox>
        <Button x:Name="StartButton" Height="30" Width="130" Content="Start game" Click="StartButton_Click"/>
    </StackPanel>
</Window>
